<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.project.comic.storebook.StoreBookDaoImpl">
	<insert id="addStoreBook"
		parameterType="com.project.comic.storebook.StoreBookDTO">
		insert into t_store_book(sidx,isbn13,isbn10,point,category,total,cnt)
		values(#{sidx},#{isbn13},#{isbn10},#{point},#{category},#{total},#{cnt})
	</insert>
	
	<select id="existIsbn" parameterType="java.util.Map" resultType="int">
		select count(*) from t_store_book where sidx=#{sidx} and 
		(isbn13=#{isbn13} or isbn10=#{isbn10})
	</select>

	
	<select id="getPageList" parameterType="java.util.Map"
	resultType="com.project.comic.storebook.StoreBookDTO">
		select * from t_store_book where sidx=#{sidx}
		limit #{start}, #{listsize}
	</select>
	
	<select id="getBooksCountAll" parameterType="int"
	resultType="int" >
		select count(*) from t_store_book where sidx=#{sdix}
	</select>
		
</mapper>